<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Actual content -->
    <FrameLayout
        android:id="@+id/base_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Drawer -->
    <LinearLayout
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start">

        <TextView
            android:id="@+id/drawer_first_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_height"
            android:paddingLeft="@dimen/drawer_horizontal_padding"
            android:paddingRight="@dimen/drawer_horizontal_padding"
            android:background="@color/dark_background"
            android:gravity="center_vertical"
            android:textColor="@color/list_item_text_light"
            android:textSize="@dimen/drawer_text_size"
            android:clickable="true"
            android:onClick="invokeFirstItem"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_divider_height"
            android:background="@android:color/darker_gray" />

        <ListView
            android:id="@+id/drawer_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_background"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="@dimen/drawer_divider_height"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>