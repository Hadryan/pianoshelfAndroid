<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheet_music_card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sheet_list_item_background"
    android:layout_margin="@dimen/grid_margin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/list_bottom_margin">

        <!--
        Here we make the assumption that most preview images will be close to the example preview image
        android:src="@drawable/example_preview_image"
        -->
        <ImageView
            android:id="@+id/sheet_music_preview_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <include layout="@layout/adapter_sheet_list_item_3" />

    </LinearLayout>

</android.support.v7.widget.CardView>