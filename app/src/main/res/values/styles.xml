<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
    </style>

    <!-- Fonts -->
    <style name="nav_header" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>

    </style>

    <style name="username_text">

    </style>

    <!-- Header -->
    <style name="horizontal_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/vertical_header_height</item>
        <item name="android:layout_marginLeft">@dimen/vertical_header_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/vertical_header_horizontal_margin</item>

    </style>

    <style name="header_font">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
